<!--pages/main/main.wxml-->
  <!--搜索操作条 -->
<view class="cu-bar search bg-white">
    <view class="cu-avatar round" style="background-image:url(https://wx.qlogo.cn/mmopen/vi_32/DYAIOgq83eqUD4gEIE8eCvZsURFJDEJc18GBEnrq5SgibcdqLqOmSMFnCu77ZdRbWB9iaSqFm2ZIk3PlPmyu6SHQ/132)" bindtap="showModal" data-target="DrawerModalL"></view>
    <view class="search-form round">
      <text class="cuIcon-search"></text>
      <input type="text" placeholder="搜索笔记、图片" confirm-type="search"></input>
    </view>
    <view class="action">
      <text>淄博</text>
      <text class="cuIcon-triangledownfill"></text>
    </view>
</view>

  <!--模态框内容 -->
<view class="cu-modal drawer-modal justify-start {{modalName=='DrawerModalL'?'show':''}}" bindtap="hideModal">
  <view class="cu-dialog basis-lg" catchtap style="top:{{CustomBar}}px;height:calc(100vh - {{CustomBar}}px)">
    <view class="cu-list menu text-left">
      <view class="cu-item arrow" wx:for="{{5}}" wx:key>
        <view class="content">
          <view>Item {{index +1}}</view>
        </view>
      </view>
    </view>
  </view>
</view>
<!--删除询问模态框-->
<view class="cu-modal {{modalName=='DialogModal1'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content"></view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red"></text>
      </view>
    </view>
    <view class="padding-xl">
      是否删除此笔记？
    </view>
    <view class="cu-bar bg-white justify-end">
      <view class="action">
        <button class="cu-btn line-green text-green" bindtap="hideModal">取消</button>
        <button class="cu-btn bg-green margin-left" bindtap="deleteAndRefresh">确定</button>

      </view>
    </view>
  </view>
</view>

<!--倒计时卡片页面-->
<view class="cu-card dynamic timecard{{isCard?'no-card':''}}">
  <view class="cu-item shadow">
    <view><text>\n</text></view>
    <view><text>\n</text></view>
    <!--笔记内容输入处-->
    <view class="text-content">
        <text style="font-size:50rpx;font-weight:700;color:white">距离 </text>                 <text style='color:white'>{{endTime}}</text>
        <text style="font-size:50rpx;font-weight:700;color:white"> 还有 </text>                <text style='color:white'>{{day}}</text> 
        <text style="font-size:50rpx;font-weight:700;color:white"> 天</text>  
    </view>
    <view class="text-gray text-sm text-right padding">
      <text class="cuIcon-attentionfill margin-lr-xs"></text> 10
      <text class="cuIcon-appreciatefill margin-lr-xs"></text> 20
      <text class="cuIcon-messagefill margin-lr-xs"></text> 30
    </view>
  </view>
</view>



<!--图片笔记卡片页面-->
<view class="cu-card case {{isCard?'no-card':''}}">
  <view class="cu-item shadow">
    <view class="image">
      <image src="https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg" mode="widthFix"></image>
      <view class="cu-tag bg-blue">紧要程度</view>
      <view class="cu-bar bg-shadeBottom">
        <text class="text-cut">这是图片标题处。</text>
      </view>
    </view>
    <view class="cu-list menu-avatar">
      <view class="cu-item">
        <view class="cu-avatar round lg" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg);"></view>
        <view class="content flex-sub">
          <view class="text-grey">UserName</view>
          <view class="text-gray text-sm flex justify-between">
            Data
            <view class="text-gray text-sm">
              <text class="cuIcon-attentionfill margin-lr-xs"></text> 10
              <text class="cuIcon-appreciatefill margin-lr-xs"></text> 20
              <text class="cuIcon-messagefill margin-lr-xs"></text> 30
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>


<!--文字笔记卡片页面-->
<view data-text="{{item._id}}" class="cu-card dynamic {{isCard?'no-card':''}}" wx:for="{{ne}}" wx:key bindlongpress='showModal' bindtap="change" data-target="DialogModal1">
  <view class="cu-item shadow">
    <view><text>\n</text></view>
    <view><text>\n</text></view>
    <!--文本笔记内容输入处-->
    <view class="text-content">
        {{item.note}}
    </view>
    <view class="text-gray text-sm text-right padding">
      <text class="cuIcon-attentionfill margin-lr-xs"></text> 10
      <text class="cuIcon-appreciatefill margin-lr-xs"></text> 20
      <text class="cuIcon-messagefill margin-lr-xs"></text> 30
    </view>
  </view>
</view>

<!--倒计时卡片页面-->
<view class="cu-card dynamic timecard{{isCard?'no-card':''}}">
  <view class="cu-item shadow">
    <view><text>\n</text></view>
    <view><text>\n</text></view>
    <!--笔记内容输入处-->
    <view class="text-content">
        <text style="font-size:50rpx;font-weight:700;color:white">距离 </text>                 <text style='color:white'>{{endTime}}</text>
        <text style="font-size:50rpx;font-weight:700;color:white"> 还有 </text>                <text style='color:white'>{{day}}</text> 
        <text style="font-size:50rpx;font-weight:700;color:white"> 天</text>  
    </view>
    <view class="text-gray text-sm text-right padding">
      <text class="cuIcon-attentionfill margin-lr-xs"></text> 10
      <text class="cuIcon-appreciatefill margin-lr-xs"></text> 20
      <text class="cuIcon-messagefill margin-lr-xs"></text> 30
    </view>
  </view>
</view>

<!--添加笔记模态窗口-->

<view class="cu-modal {{modalName=='RadioModal'?'show':''}}" bindtap="hideModal">
  <view class="cu-dialog" catchtap>
    <radio-group class="block">
      <view class="cu-list menu text-left">

        <view class="cu-item">
          <label class="flex justify-between align-center flex-sub">
            <view class="flex-sub" bindtap="addTextNote">便签</view>
            <radio class="round"></radio>
          </label>
        </view>

        <view class="cu-item">
          <label class="flex justify-between align-center flex-sub">
            <view class="flex-sub">清单</view>
            <radio class="round"></radio>
          </label>
        </view>

        <view class="cu-item">
          <label class="flex justify-between align-center flex-sub">
            <view class="flex-sub">图片</view>
            <radio class="round"></radio>
          </label>
        </view>

      </view>
    </radio-group>
  </view>
</view>

<!--底部卡片页面-->
<view class="cu-card dynamic {{isCard?'no-card':''}}">
  <view class="cu-item shadow">
        <text style="text-align: center;">-----------已经拉到底啦！</text> 
    <view class="text-gray text-sm text-right padding">
      <text class="cuIcon-attentionfill margin-lr-xs"></text> 10
      <text class="cuIcon-appreciatefill margin-lr-xs"></text> 20
      <text class="cuIcon-messagefill margin-lr-xs"></text> 30
    </view>
  </view>
</view>

<!--底部导航栏-->
  <view class="cu-bar tabbar bg-white">

    <view class="action text-green">
      <view class="cuIcon-homefill"></view> 首页
    </view>

    <view class="action text-gray add-action">
      <button class="cu-btn cuIcon-add bg-green shadow" bindtap="showModal" data-target="RadioModal"></button>
      添加
    </view>
   
    <view class="action text-gray">
      <view class="cuIcon-my">
        <view class="cu-tag badge"></view>
      </view>
      我的
    </view>
  </view>

 